<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="container mx-auto py-8">
      <div class="rounded-lg p-6 max-w-lg mx-auto">
        <h1 class="text-3xl font-bold text-gray-800 mb-4"><%= @task.title %></h1>
        <div class="mb-4">
          <p class="text-gray-600"><%= @task.description %></p>
        </div>
        <div class="mb-4">
          <h2 class="text-xl font-semibold text-gray-700">Status</h2>
          <% if @task.completed %>
            <span class="bg-green-200 text-green-700 py-1 px-3 rounded-full text-sm">Completed</span>
          <% else %>
            <span class="bg-red-200 text-red-700 py-1 px-3 rounded-full text-sm">Pending</span>
          <% end %>
        </div>

        <div class="mb-4">
          <h2 class="text-xl font-semibold text-gray-700">Due Date</h2>
          <p class="text-gray-600"><%= @task.due_date.strftime("%Y-%m-%d") %></p>
        </div>

        <div class="mt-6">
          <a href="<%= tasks_path %>" class="bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 focus:outline-none">Back to Tasks</a>
        </div>
      </div>
    </div>
  </div>
</div>
